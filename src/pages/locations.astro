---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import fortworth from "../assets/location/fortworth.jpg";
import nursery from "../assets/location/nursery.jpg";
import panjaa from "../assets/location/panjaa.jpeg";
import plano from "../assets/location/plano.jpg";
---

<Layout title="Locations">
	<div class="list-of-items">
		<Card
			title="Kolkata"
			src={panjaa}
		/>
		<Card
			title="Fort Worth"
			src={fortworth}
		/>
		<Card
			title="Plano"
			src={plano}
		/>
		<Card
			title="Mckinney"
			src={nursery}
		/>
	</div>
</Layout>

<style lang="scss" is:global>
	.list-of-items {
		height: calc(100vh - 75px);
		overflow: auto;
		display: grid;
		grid-gap: 2rem;
	}
</style>
